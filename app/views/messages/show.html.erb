<div class="card mt-5">
  <div class="card-body">
    <h5 class="card-title">
      <% if @message.outbox.user.is_doctor? %>Dr.<% end %>
      <%= @message.outbox.user.full_name %>
    </h5>
    <p class="card-text"><%= @message.body %></p>

    <div class="d-flex">
      <%= link_to t('.reply'), new_message_path(parent_message_id: @message.id), class: 'btn btn-primary' %>
      <% if params[:user_type] == 'patient' && @message.outbox.user.is_doctor?  %>
        <%= link_to t('.lost_rescription'), reissue_prescription_message_path(params[:user_type],@message.id), class: 'btn btn-secondary me-auto ms-2' %>
      <% end %>

      <%= link_to t('common.back'), :back, class: 'btn btn-link' %>
    </div>
  </div>
</div>